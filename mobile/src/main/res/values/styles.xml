<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_compat_margin</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <!-- Material Fonts Size -->
    <style name="FontDisplay4">
        <item name="android:textSize">112sp</item>
        <item name="android:textColor">@color/black_alpha54</item>
    </style>

    <style name="FontDisplay3">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/black_alpha54</item>
    </style>

    <style name="FontDisplay2">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/black_alpha54</item>
    </style>

    <style name="FontDisplay1">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black_alpha54</item>
    </style>

    <style name="FontHeadline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black_alpha87</item>
    </style>

    <style name="FontTitle">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black_alpha87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontSubhead2">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black_alpha87</item>
    </style>

    <style name="FontSubhead1">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black_alpha87</item>
    </style>

    <style name="FontBody2">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_alpha87</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontBody1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_alpha87</item>
    </style>

    <style name="FontCaption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black_alpha54</item>
    </style>

    <style name="FontButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black_alpha87</item>
    </style>


</resources>
